<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <%= gravatar_for @user, size: 56 %>
      <h1>
        <%= @user.name %>
      </h1>    
      <section>
        <div class="col-sm-6 col-md-6 first">
          <%= render 'follow_form' if signed_in? %>
        </div>
      </section>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <h4>public key:</h4>
      <section>
        <% if @user.pub_key != nil %>
          <%= @user.pub_key %>  
        <% else %>
          <p>i don't care about privacy lol!</p>
        <% end %>
      </section>    
    </section>
  </aside>
  <div class="col-md-8">
    <!--<%= render 'follow_form' if signed_in? %>-->
    <% if @user.microposts.any? %>
    <h3>posts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
